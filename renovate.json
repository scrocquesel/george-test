{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 0,
  "postUpgradeTasks": {
    "commands": [
      "pwd",
      "ls -lha",
      "docker run --volume ./:/usr/src/myapp -w /usr/src/myapp --rm openjdk:17 pwd",
      "docker run --volume ./:/usr/src/myapp -w /usr/src/myapp --rm openjdk:17 ls -lha"],
    "fileFilters": ["pom.xml"],
    "executionMode": "update"
  }

}
